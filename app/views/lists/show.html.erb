<div class="d-flex justify-content-between m-3">
  <h2 class="m-0"><%= @list.name %></h2>
  <button class="btn btn-outline-primary p-1"><%= link_to("Add bookmark", new_list_bookmark_path(@list), class: "text-decoration-none") %></button>
</div>

<div class="mb-3">
  <p class="ms-3"><%= "You havn't saved any movies yet!" if @list.movies.empty? %></p>
  <% @list.bookmarks.each do |bookmark| %>
    <div class="d-flex m-3 bg-white shadow-sm", style="height: 200px;">
      <%= image_tag(bookmark.movie.poster_url, class: "card-img-left") %>
      <div class="p-3 pb-0">
        <div class="d-flex align-items-center">
          <h2><%= bookmark.movie.title %></h2>
          <div class="ms-2 d-flex align-items-center">
            <h5>Rating</h5>
            <p class="ms-1 mb-2"><%= bookmark.movie.rating %></p>
          </div>
          <%= link_to("Remove", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "ms-2 mb-2 text-danger text-decoration-none") %>
        </div>
        <div>
          <h5>Overview</h5>
          <p><%= bookmark.movie.overview %></p>
        </div>
        <div>
          <h5>Your comment</h5>
          <p><%= bookmark.comment %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="d-flex justify-content-between">
  <%= @list.name %>
  <%= link_to("Add bookmark", new_list_bookmark_path(@list)) %>
</div>

<div>
  <%= "You havn't saved any movies yet!" if @list.movies.empty? %>
  <% @list.movies.each do |movie| %>
    <div class="d-flex m-3 card">
      <div><%= image_tag(movie.poster_url, class: "card-img-left") %></div>
      <div class="card-body">
        <h2><%= movie.title %></h2>
        <p><%= movie.rating %></p>
        <p><%= movie.overview %></p>
        <p><%= @list.bookmarks[0].comment %></p>
        <%= link_to("Remove", bookmark_path(@list.bookmarks), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}) %>
      </div>
    </div>
  <% end %>
</div>

<%= link_to("Back to list", root_path) %>

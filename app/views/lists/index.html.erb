<div class="m-3">
  <h1>Lists</h1>
  <%= "You havn't created any lists yet!" if @lists.empty? %>
  <div class="d-flex h-25">
    <% @lists.each do |list| %>
      <div class="card-category w-25 h-100" data-aos="zoom-in" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3), url('<%= list.photo.attached? ? cl_image_tag(list.photo.key) : asset_path('list_background.jpg') %>'))">
        <%=  %>
        <%= link_to(list.name, list_path(list), class: "text-decoration-none") %>
        <%= link_to("Remove", list_delete_path(list), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "ms-2 mb-2 text-danger text-decoration-none") %>
      </div>
    <% end %>
  </div>
  <p><%= link_to("New list", new_list_path, class: "text-decoration-none") %></p>
</div>

